<div class="min-h-screen bg-white flex items-center justify-center">
  <div class="w-100 bg-cyan-200 text-center py-10 rounded-md shadow-lg relative">
    <!-- タイトル -->
    <h1 class="text-2xl font-bold text-purple-600 mb-1">おくすりベル</h1>
    <p class="text-sm text-purple-800 mb-6">LINEでおくすりの時間をおしらせ！</p>
    <!-- ボタン -->
    <div class="space-y-4">
      <div class="w-4/5 mx-auto">
        <%= link_to "ログイン", '#', class: "py-2 bg-white text-gray-800 font-bold rounded-full shadow" %>

<main class="px-4 py-6">
  <section class="bg-white rounded-xl p-6 shadow-md max-w-xl mx-auto">
    <!-- ステップバー -->
    <div class="flex items-center justify-between mb-5 text-xs">
      <% steps = ["おくすり名\n入力", "服用情報\n入力", "残量数\n入力", "お知らせ時間\n入力", "内容確認"] %>
      <% steps.each_with_index do |label, i| %>
        <div class="flex flex-col items-center">
          <div class="w-6 h-6 rounded-full flex items-center justify-center
                      <%=
                        i == 0 ? 'bg-cyan-400 text-white' :
                        'bg-gray-300 text-gray-700'
                      %>">
            <%= i + 1 %>
          </div>
          <p class="text-center whitespace-pre text-[10px] mt-1"><%= label %></p>
        </div>
      <% end %>
    </div>
    <!-- タイトル -->
    <h2 class="text-center text-3xl font-bold mb-5 underline decoration-dotted decoration-[cyan]">お薬登録</h2>
    <!-- フォーム -->
    <%= form_with model: @medicine, url: medicine_wizard_path(:name), method: :patch, local: true do |form| %>
      <div class="mb-6">
        <label class="block text-center font-semibold mb-3">おくすりの名前を入力してください</label>
        <!-- おくすり名 -->
        <%= form.label :name, "おくすり名", class: "block font-medium mb-1" %>
        <%= form.text_field :name, placeholder: "おくすり名を入力してください", required: true, class: "w-full border border-gray-300 rounded px-3 py-2 mb-4 shadow-sm" %>
        <!-- 写真アップロード -->
        <%# <p class="text-xs text-gray-700 mb-1">
          おくすりの写真がある場合は下のボタンを押してください。
        </p>
        <div class="flex items-center space-x-2">
          <%= form.file_field :image, class: "text-sm text-blue-600" %>
        <%# <span class="text-xs text-gray-600">ファイル未選択</span>
        </div> %>
      </div>
      <!-- 次へボタン -->
      <div class="flex justify-center mt-10">
        <%= form.submit "次へ", class: "bg-cyan-400 text-white font-bold py-2 px-10 rounded-full shadow hover:bg-cyan-600" %>
      </div>
    <% end %>
  </section>
</main>
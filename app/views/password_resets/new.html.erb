<div class="bg-white flex flex-col justify-between">
  <!-- メインカード -->
  <div class="flex justify-center mt-6">
    <div class="bg-white w-11/12 max-w-md p-6 rounded-xl shadow-md">
      <!-- パスワード変更ステップ -->
      <h2 class="text-center text-lg font-bold mb-4">パスワード変更</h2>
      <div class="flex justify-around items-center text-sm mb-6">
        <div class="text-cyan-500 font-bold border-b-2 border-cyan-500 pb-1">メールアドレス入力</div>
        <div class="text-gray-400">新パスワード入力</div>
        <div class="text-gray-400">完了</div>
      </div>
      <!-- メッセージ -->
      <p class="text-center font-semibold mb-6">登録済みのメールアドレスを<br>
        入力してください</p>
      <!-- フォーム -->
      <%= form_with url: password_resets_path, method: :post, local: true do |form| %>
        <!-- メールアドレス -->
        <div class="mb-6">
          <label class="block font-semibold mb-1">メールアドレス</label>
          <%= form.email_field :email, required: true, placeholder: "入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 shadow" %>
        </div>
        <!-- 申請ボタン -->
        <div class="flex justify-center">
          <%= form.submit "申請する", class: "bg-cyan-200 text-black font-bold py-2 px-10 rounded-full shadow hover:bg-cyan-300" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

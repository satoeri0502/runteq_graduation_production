<div class="bg-white flex flex-col justify-between">
  <!-- メインカード -->
  <div class="flex justify-center mt-6">
    <div class="bg-white w-11/12 max-w-md p-6 rounded-xl shadow-md">
      <!-- タイトル -->
      <h2 class="text-xl font-bold text-center mb-4">ログイン</h2>
      <!-- LINEログイン -->
      <div class="mb-6">
        <p class="text-sm font-semibold text-center mb-2">LINEでログイン</p>
        <div class="flex justify-center">
          <%= link_to auth_at_provider_path(:provider => :line), class: "flex items-center bg-green-500 text-white px-4 py-2 rounded-full shadow hover:bg-green-600" do %>
            <img src="/images/line_icon.png" alt="LINE" class="w-5 h-5 mr-2"> LINEでログイン
          <% end %>
        </div>
      </div>
      <!-- メールアドレスログイン -->
      <div class="mb-6">
        <p class="text-sm font-semibold text-center mb-4">メールアドレスでログイン</p>
        <%= form_with url: login_path do |form| %>
          <div class="mb-4">
            <%= form.label :email, "メールアドレスを入力", class: "block font-semibold mb-1" %>
            <%= form.email_field :email, required: true, class: "w-full border border-gray-300 rounded px-3 py-2 shadow" %>
          </div>
          <div class="mb-2">
            <%= form.label :password, "パスワードを入力", class: "block font-semibold mb-1" %>
            <%= form.password_field :password, required: true, class: "w-full border border-gray-300 rounded px-3 py-2 shadow" %>
          </div>
          <div class="text-right mb-4">
            <%= link_to 'パスワードを忘れた方はこちら', new_password_reset_path,
                class: "text-xs text-gray-500 underline" %> >
          </div>
          <div class="flex justify-center">
            <%= form.submit 'ログイン', class: "bg-cyan-200 text-black font-bold py-2 px-10 rounded-full shadow hover:bg-cyan-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

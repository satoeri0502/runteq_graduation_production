<div class="min-h-screen bg-white flex flex-col justify-between">
  <!-- ヘッダー -->
  <div class="bg-cyan-200 p-4 flex items-center justify-between">
    <h1 class="text-purple-600 font-bold text-lg">おくすりベル</h1>
    <div class="space-y-1">
      <span class="block w-6 h-0.5 bg-gray-600"></span>
      <span class="block w-6 h-0.5 bg-gray-600"></span>
      <span class="block w-6 h-0.5 bg-gray-600"></span>
    </div>
  </div>
  <!-- メインカード -->
  <div class="flex justify-center mt-6">
    <div class="bg-white w-11/12 max-w-md p-6 rounded-xl shadow-md">
      <!-- タイトル -->
      <h2 class="text-xl font-bold text-center mb-4">ログイン</h2>
      <!-- LINEログイン -->
      <div class="mb-6">
        <p class="text-sm font-semibold text-center mb-2">LINEでログイン</p>
        <div class="flex justify-center">
          <%= button_to auth_at_provider_path(:provider => :line), class: "flex items-center bg-green-500 text-white px-4 py-2 rounded-full shadow hover:bg-green-600" do %>
            <img src="/images/line_icon.png" alt="LINE" class="w-5 h-5 mr-2"> LINEでログイン
          <% end %>
        </div>
      </div>
      <!-- メールアドレスログイン -->
      <div class="mb-6">
        <p class="text-sm font-semibold text-center mb-4">メールアドレスでログイン</p>
        <%= form_with url: login_path do |form| %>
          <div class="mb-4">
            <%= form.label :email, "メールアドレスを入力", class: "block font-semibold mb-1" %>
            <%= form.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2 shadow" %>
          </div>
          <div class="mb-2">
            <%= form.label :password, "パスワードを入力", class: "block font-semibold mb-1" %>
            <%= form.password_field :password, class: "w-full border border-gray-300 rounded px-3 py-2 shadow" %>
          </div>
          <div class="text-right mb-4">
            <a href="#" class="text-xs text-gray-500 underline">パスワードを忘れた方はこちら</a>
          </div>
          <div class="flex justify-center">
            <%= form.submit 'ログイン', class: "bg-cyan-200 text-black font-bold py-2 px-10 rounded-full shadow hover:bg-cyan-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- フッター -->
  <div class="bg-cyan-200 text-xs text-gray-600 p-4 text-left space-y-1">
    <p>利用規約</p>
    <p>プライバシーポリシー</p>
    <p>お問い合わせ</p>
  </div>
</div>
